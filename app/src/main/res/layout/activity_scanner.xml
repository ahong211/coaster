<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coaster.android.coaster.views.activities.ScannerActivity"
    android:background="#f1f1f1"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="287dp"
        android:src="@drawable/coaster_nav_image"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp" />

    <Button
        android:id="@+id/butQR"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:onClick="HandleClick"
        android:text="QR CODE"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/butProd"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/butProd"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:onClick="HandleClick"
        android:text="Product Code"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="11dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/butOther"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/butOther"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:onClick="HandleClick"
        android:text="Other Code"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="34dp" />

</android.support.constraint.ConstraintLayout>
