<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_margin="20dp"
        android:clickable="true"
        app:cardBackgroundColor="#282828"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_drink_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="@string/bloody_mary"
                android:textAlignment="center"
                android:textColor="@color/colorwhite"
                android:textSize="25sp"
                android:textStyle="italic|bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorPrimary" />
            <!--android:background="#d73e3e" -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/card_drink_img"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorwhite" />

                <TextView
                    android:id="@+id/card_drink_desc"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:height="180dp"
                    android:background="@color/colorwhite"
                    android:paddingLeft="10dp"
                    android:text="These tasty bloody marys will keep you coming back for more..."
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>